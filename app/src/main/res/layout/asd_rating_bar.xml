<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="24dp"
    android:background="#1e1e1e"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="70dp"
    android:id="@+id/ivReact"
    android:scaleType="centerInside"
    android:src="@drawable/img_guide0"
    android:layout_height="70dp">
</ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/llReact"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tvReact"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textColor="@android:color/white"
            android:text="Please leave us some feedback"
            android:padding="5dp"
            android:textSize="16sp"
            android:id="@+id/tvSecondReact"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvFirstRect"
        android:visibility="visible"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="We are Working hard for a better \nuser experience\nWe'greatly appreciate if
you can\n rate us"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/ic_star_empty"
            android:scaleType="centerInside"
            android:id="@+id/ivRateOne"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp">
        </ImageView>
        <ImageView
            android:id="@+id/ivRateTwo"
            android:src="@drawable/ic_star_empty"
            android:layout_marginStart="@dimen/margin_image"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp">
        </ImageView>
        <ImageView
            android:id="@+id/ivRateThree"
            android:layout_marginStart="@dimen/margin_image"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_empty"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp">
        </ImageView>
        <ImageView
            android:id="@+id/ivRateFour"
            android:layout_marginStart="@dimen/margin_image"
            android:src="@drawable/ic_star_empty"
            android:scaleType="centerInside"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="48dp">
        </ImageView>
        <ImageView
            android:id="@+id/ivRateFive"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_empty"
            android:layout_marginStart="@dimen/margin_image"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp">
        </ImageView>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/margin_image"
    android:padding="5dp"
    android:gravity="bottom"
    android:layout_height="wrap_content">
    <TextView
        android:text="The best we can get :)"
        android:textColor="#fda81b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:layout_marginStart="15dp"
        android:rotation="50"
        android:src="@drawable/ic_base_palm"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp">
    </ImageView>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvRateButton"
        android:layout_marginTop="20dp"
        android:background="@drawable/ratting_bar_background"
        android:layout_width="match_parent"
        android:text="rate"
        android:textAllCaps="true"
        android:gravity="center"
        android:enabled="false"
        android:textColor="@color/material_gray_200"
        android:layout_height="40dp">
    </TextView>
        <ImageView
            android:id="@+id/ivEnable"
            android:layout_marginTop="20dp"
            android:background="#50000000"
            android:layout_width="match_parent"
            android:text="rate"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/material_gray_200"
            android:layout_height="40dp">
        </ImageView>
    </RelativeLayout>
</LinearLayout>